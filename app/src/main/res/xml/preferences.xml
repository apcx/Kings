<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.pavelsikun.seekbarpreference.SeekBarPreferenceCompat android:key="@string/combat_move_weight"
        android:title="评分: 移动速度权重"
        android:defaultValue="50"
        app:msbp_maxValue="200"
        app:msbp_interval="50"
        app:msbp_measurementUnit="%" />

    <SwitchPreferenceCompat android:key="@string/combat_combo"
        android:title="Combo"
        android:summaryOff="全程战斗"
        android:summaryOn="仅一套连招" />

    <SwitchPreferenceCompat android:key="@string/combat_red_power"
        android:title="绯红之力" />

    <SwitchPreferenceCompat android:key="@string/combat_multiple"
        android:title="波及附近其它英雄" />

    <SwitchPreferenceCompat android:key="@string/combat_frenzy"
        android:title="技能: 狂暴 (测试)" />

    <SwitchPreferenceCompat android:key="@string/combat_mob"
        android:title="购买【狩猎宽刃】"
        android:summary="仅影响性价比" />

    <SwitchPreferenceCompat android:key="@string/combat_wood"
        android:title="成吉思汗: 草丛作战" />

    <SwitchPreferenceCompat android:key="@string/combat_siege"
        android:title="黄忠: 预先架起炮台"
        android:summaryOff="移动作战"
        android:summaryOn="预先架起炮台" />
</PreferenceScreen>
