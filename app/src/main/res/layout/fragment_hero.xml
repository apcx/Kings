<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,RtlHardcoded"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/poster_border"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="请选择英雄" />

        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:viewAspectRatio="0.5625" />
    </FrameLayout>

    <TextView android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold" />

    <apc.kings.ItemGroup android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:visibility="gone" />

    <LinearLayout android:id="@+id/runes"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:visibility="gone">

        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView android:id="@+id/rune_red_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rune_red"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView android:id="@+id/rune_red_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rune_red"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView android:id="@+id/rune_red_0q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="12sp" />

            <TextView android:id="@+id/rune_red_1q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView android:id="@+id/rune_blue_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rune_blue"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView android:id="@+id/rune_blue_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rune_blue"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView android:id="@+id/rune_blue_0q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="12sp" />

            <TextView android:id="@+id/rune_blue_1q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView android:id="@+id/rune_green_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rune_green"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView android:id="@+id/rune_green_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rune_green"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView android:id="@+id/rune_green_0q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="12sp" />

            <TextView android:id="@+id/rune_green_1q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/mark_group"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_item_set"
                android:gravity="center_horizontal"
                android:text="评分" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_item_set"
                android:gravity="center_horizontal"
                android:text="性价比" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/mark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_item_set"
                android:gravity="center_horizontal" />

            <TextView android:id="@+id/cost_ratio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_item_set"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
